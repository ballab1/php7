location ~ \.cgi(.*)$ {
    root /usr/local/cgi;
    rewrite ^/cgi-bin/(.*)$ /$1;
    include fastcgi_params;

    fastcgi_param AUTH_USER       $remote_user          if_not_empty;
    fastcgi_param REMOTE_USER     $remote_user          if_not_empty;
    fastcgi_param SCRIPT_FILENAME $fastcgi_script_name;
    fastcgi_pass fcgiwrap;
}
